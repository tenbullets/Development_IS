<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">

    <servlet>
        <servlet-name>introAut</servlet-name>
        <servlet-class>servlets.IntroAutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>introAut</servlet-name>
        <url-pattern>/introAut</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>introReg</servlet-name>
        <servlet-class>servlets.IntroRegServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>introReg</servlet-name>
        <url-pattern>/introReg</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AutFilter</filter-name>
        <filter-class>listener.AutFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AutFilter</filter-name>
        <servlet-name>introAut</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AutFilter</filter-name>
        <servlet-name>introReg</servlet-name>
    </filter-mapping>

</web-app>

